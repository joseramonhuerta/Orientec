<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ListviewItemEstadoCuentaBinding"
            type="com.servfix.manualesapp.classes.ItemEstadoCuenta" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:cardBackgroundColor="#fff"
       android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtFechaDetalleEstadoCuenta"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Fecha"


                />
            <TextView
                android:id="@+id/txtConceptoDetalleEstadoCuenta"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="Concepto"

                />
            <TextView
                android:id="@+id/txtCargoDetalleEstadoCuenta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textAlignment="textEnd"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/txtAbonoDetalleEstadoCuenta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Abono"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                />
            <TextView
                android:id="@+id/txtSaldoDetalleEstadoCuenta"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                />

        </LinearLayout>

    </LinearLayout>
</layout>