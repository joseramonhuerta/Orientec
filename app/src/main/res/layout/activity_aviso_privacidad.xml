<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AvisoPrivacidad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAvisoPrivacidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
       android:minHeight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnAtrasAvisoPrivacidad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_atras" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="Aviso de Privacidad"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/v_pdfAvisoPrivacidad"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    <ProgressBar
        android:id="@+id/ProgressBarAvisoPrivacidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        />
    </LinearLayout>
</RelativeLayout>